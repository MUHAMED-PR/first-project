<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    
    <div class="layout-container">
        <!-- Layout container -->
        
        <div class="layout-page">
             <!-- Navbar -->
          <nav
          class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
          id="layout-navbar"
        >
          <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
            <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
              <i class="bx bx-menu bx-sm"></i>
            </a>
          </div>

          <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
            <!-- Search -->
            <div class="navbar-nav align-items-center">
              <div class="nav-item d-flex align-items-center">
                <i class="bx bx-search fs-4 lh-0"></i>
                <input
                  type="text"
                  class="form-control border-0 shadow-none"
                  placeholder="Search..."
                  aria-label="Search..."
                />
              </div>
            </div>
            <!-- /Search -->

            <ul class="navbar-nav flex-row align-items-center ms-auto">
              <!-- Place this tag where you want the button to render. -->
             

          
              <!--/ User -->
            </ul>
          </div>
        </nav>

      
          <!-- / Navbar -->
            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <% if (customers.length === 0) { %>
                <div class="alert alert-info mt-3" role="alert">
                    No Users Found!
                </div>
                <% } else { %>
                <!-- Basic Bootstrap Table -->
                <div class="card mt-2 ms-4 me-4 ">
                    <h5 class="card-header">USERS</h5>
                    <div class="table-responsive text-nowrap" id="reloadPart">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                <% var i=0 %>
                                <% customers.forEach((customer,index)=>{%>
                                <% if (!customer.is_admin) { %> <!-- Check if user is not admin -->
                                <tr>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= i+1
                                            %></strong></td>
                                            <% i++ %>
                                    <td><%= customer.userName %></td>
                                    <td><%= customer.email%></td>
                                    <td><%= customer.mobile%></td>
                                    <td>
                                      <div class="btn-group" >
                                        <button type="button" class="<%= customer.is_blocked ? 'btn-success' : 'btn-danger' %> " onclick="blockUser('<%= customer._id%>')">
                                            <i class="me-1 "></i>
                                            <% if(customer.is_blocked){%>
                                              <span class="blockText  icon">Unblock</span>
                                            <%}else{%>
                                              <span class="blockText  icon">Block</span>
                                            <% } %>
                                        </button>
                                    </div>
                                    
                                    </td>
                                </tr>
                                <% } %>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--/ Basic Bootstrap Table -->
                <% } %>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->

