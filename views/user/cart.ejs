		<script>
			function remove(productId) {

				const cartElement = document.getElementById('cartElement')
				console.log(productId)

				axios.get(`/removeCart/${productId}`)
					.then(Response => {
						if (Response.data.status) {
							cartElement.remove()
						}
					})
					.catch(error => {
						console.log(error)
					})
			}





		</script>
		<script>
			function quantity(index, productId) {

				// console.log(subTotal)
				const price = document.getElementById(`price-${index}`).innerHTML;
				const correntq = document.getElementById(`inc-${index}`).value
				let total = correntq * price;
				console.log(total)



				let totalprice = document.getElementById(`totalPrice-${index}`).innerHTML = total

				//    console.log(totalprice,'it total price')


				// console.log(correntq)




				let data = {
					currentQuantity: correntq,
					productId: productId
				}

				axios.patch('/ProductQuantity', data)
					.then(response => {
						console.log('it is working')
						let data = response.data.cartDocument
						let subTotal = data.Products.reduce((acc, cur) => acc + cur.quantity * cur.productId.price, 0)
						document.getElementById('subTotal').innerHTML = subTotal
						document.getElementById('summaryTotal').innerHTML = subTotal + 20

					})
					.catch(error => {
						console.log('Error:', error)
					})



			}
		</script>



