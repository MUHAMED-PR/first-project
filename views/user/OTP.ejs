<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>OTP Page</title>
 <!-- Bootstrap CSS -->
 <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
 <!-- Custom CSS -->
 <style>
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .otp-container {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 300px;
    }
    #otpInput {
      font-size: 1.2rem;
      text-align: center;
    }
    .btn {
      width: 100%;
    }
    #verifyButton {
      margin-top: 10px;
      font-size: 1.2rem;
    }
    #resendButton {
      margin-top: 10px;
      font-size: 1rem;
    }
 </style>
</head>
<body>

<div class="container">
 <div class="otp-container w-50 ">
    <h2 class="mb-4">Enter OTP</h2>
    <div id="otpInput" class="mb-3">
      <form id="otpForm" action="/verify" method="post">
      <input type="text" name="otp" class="form-control" placeholder="Enter OTP" maxlength="6" >
    </div>
    <div id="timer" class="text-muted mt-3"> 00:30</div>
   <div>
    <% if (typeof messages !== 'undefined' && messages) { %>
      <p class="text-danger text-center "><%= messages %></p>
  <% } %>
   </div>
  
    <button id="resendButton" class="btn btn-primary w-25 text-center" type="button">Resend</button>
    <input type="submit" id="verifyButton" class="btn btn-success mb-3" value="verify">
      
 </form>
 </div>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
 document.addEventListener("DOMContentLoaded", function() {
   const resendButton = document.getElementById("resendButton");
   const otpForm = document.getElementById("otpForm");
   const verifyButton = document.getElementById('verifyButton')


   //Add event listener for verify button
   verifyButton.addEventListener('click',function(){
    //change form action to /verify
    otpForm.action = '/verify';
    //change the method of form to post 
    otpForm.method = 'post';
    //submit the form 
    // otpForm.submit();
   });
   
   // Add event listener for resend button
   resendButton.addEventListener("click", function() {
    window.onload()
     // Change form action to /resend
     otpForm.action = "/resend";
     //change the method of form to get
     otpForm.method = "get"
     // Submit the form
     otpForm.submit();
   });
 });
  
 window.onload = function () {
    startTimer(30, document.getElementById('timer'));
    document.getElementById('resendButton').disabled = true;
 };


 function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    var intervalId = setInterval(function () {
      minutes = parseInt(timer / 60, 10);
      seconds = parseInt(timer % 60, 10);

      minutes = minutes < 10 ? "0" + minutes : minutes;
      seconds = seconds < 10 ? "0" + seconds : seconds;

      display.textContent = minutes + ":" + seconds;

      if (--timer < 0) {
        clearInterval(intervalId);
        display.textContent = "OTP expired";
        document.getElementById('resendButton').disabled = false;
      }
    }, 1000);
 }

</script>

</body>
</html>
