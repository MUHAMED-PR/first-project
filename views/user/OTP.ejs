<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>OTP Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-image: url('assets/images/backgrounds/login-bg.jpg'); 
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .otp-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        .otp-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }
        .form-control {
            border: 2px solid #e5e5e5;
            border-radius: 25px;
            padding: 12px 20px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }
        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }
        .btn-verify {
            background-image: linear-gradient(to right, #ff9041, #fa5538);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 12px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-image 0.3s ease;
        }
        .btn-verify:hover {
            background-image: linear-gradient(to right, #ff4b2b, #ff416c);
        }
        .text-muted {
            font-size: 14px;
            margin-top: 10px;
        }
        .error-message {
            color: #dc3545;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="otp-container">
                <h2>Enter OTP</h2>
                <form id="otpForm" action="/home" method="post">
                    <div class="form-group">
                        <input type="text" name="otp" class="form-control" id="otpInput" placeholder="Enter OTP" maxlength="6" required>
                    </div>
                    <div id="timer" class="text-muted">00:30</div>
                    <div class="error-message">
                        <% if(typeof message != 'undefined') { %>
                            <%= message %>
                        <% } %>
                    </div>
                    <button type="button" id="resendButton" class="btn btn-success  mt-3 ">Resend OTP</button>
                    <button type="submit" id="verifyButton" class="btn btn-primary mt-3 btn-verify">Verify OTP</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const resendButton = document.getElementById("resendButton");
        const otpForm = document.getElementById("otpForm");
        const timerDisplay = document.getElementById('timer');
        let timerStarted = false;
        let intervalId;

        // Start the timer when the page loads
        startTimerIfNeeded(30, timerDisplay);
        document.getElementById('resendButton').disabled = true;

        // Function to start the timer if it hasn't already started
        function startTimerIfNeeded(duration, display) {
            if (!timerStarted) {
                startTimer(duration, display);
                timerStarted = true;
            }
        }

        // Function to start the timer
        function startTimer(duration, display) {
            var timer = duration, minutes, seconds;
            intervalId = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    clearInterval(intervalId);
                    display.textContent = "OTP expired";
                    document.getElementById('resendButton').disabled = false;
                }
            }, 1000);
        }

      // Add event listener for resend button
resendButton.addEventListener("click", function() {
    // Reset the timer
    clearInterval(intervalId);
    timerStarted = false; // Reset timerStarted flag
    startTimerIfNeeded(30, timerDisplay);
    document.getElementById('resendButton').disabled = true;

    // Change form action to /resend
    otpForm.action = "/resend";
    // Change the method of form to get
    otpForm.method = "get";
    // Submit the form
    otpForm.submit();
});

    });
</script>

</body>
</html>
